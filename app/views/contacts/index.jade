extends ../layouts/default

block main
  h1 Contacts 
    a.new(href='/contacts/new', title="new contact") (Create New)
              

block content
  each contact in contacts
    b #{contact.lastname.charAt(0)}
    .contactbox
      a.title(href='/contacts/'+contact._id, title='Edit contact') #{contact.lastname}, #{contact.firstname}
      p=contact.email

  if (pages > 1)
    .pagination
      ul
        != createPagination(pages, page)
